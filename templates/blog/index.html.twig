{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}

<section class="container mt-5 mb-5">

    <article class="mx-auto row d-flex flex-md-row justify-content-md-between justify-content-center" id="list">
        {% for article in articles %}
        <div class="card mt-4" style="width: 18rem;">
            <img src="{{ article.image }}" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{ article.title }}</h5>
                <p class="card-text">{{ article.content |raw }} </p>
                <a href="{{ path('blog_show', {'id': article.id}) }}" class="btn btn-primary">Lire la suite</a>
            </div>
        </div>
            {% endfor %}
    </article>
</section>
{% endblock %}



















